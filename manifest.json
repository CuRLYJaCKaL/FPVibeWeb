{
  "name": "FPVibe - Social Platform for FPV Drone Pilots",
  "short_name": "FPVibe",
  "description": "Join FPVibe, the premier social network for FPV drone pilots. Share flight videos, connect with pilots worldwide, and discover flying spots.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#000000",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["social", "sports", "lifestyle"],
  "icons": [
    {
      "src": "/logo-400.png",
      "sizes": "400x400",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "Discover",
      "short_name": "Discover",
      "description": "Discover FPV content and pilots",
      "url": "/?action=discover",
      "icons": [{ "src": "/logo-400.png", "sizes": "400x400" }]
    },
    {
      "name": "Upload",
      "short_name": "Upload",
      "description": "Upload your FPV flight video",
      "url": "/?action=upload",
      "icons": [{ "src": "/logo-400.png", "sizes": "400x400" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "video",
          "accept": ["video/*", "video/mp4", "video/quicktime"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "protocol_handlers": [
    {
      "protocol": "web+fpvibe",
      "url": "/?profile=%s"
    }
  ]
}
